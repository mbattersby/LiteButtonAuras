<Ui xmlns="http://www.blizzard.com/wow/ui/">

  <Script file="Overlay.lua"/>

  <Frame name="LiteButtonAurasOverlayTemplate" mixin="LiteButtonAurasOverlayMixin" setAllPoints="true" hidden="true" virtual="true">
    <Scripts>
      <OnLoad method="OnLoad" />
      <OnUpdate method="OnUpdate" />
    </Scripts>
    <Layers>
      <Layer level="ARTWORK">
        <Texture parentKey="Glow" file="Interface\AddOns\LiteButtonAuras\Textures\Overlay" setAllPoints="true" />
        <Texture parentKey="Highlight" atlas="bags-newitem" useAtlasSize="false" alphaMode="ADD" hidden="true">
          <Size x="44" y="44" />
          <Anchors>
            <Anchor point="CENTER" />
          </Anchors>
        </Texture>
      </Layer>
      <Layer level="OVERLAY">
        <FontString parentKey="Duration" inherits="GameFontHighlight" justifyH="LEFT">
          <Anchors>
            <Anchor point="BOTTOMLEFT" x="2" y="2" />
          </Anchors>
        </FontString>
      </Layer>
    </Layers>
    <Animations>
      <AnimationGroup parentKey="HighlightAnim" looping="REPEAT">
        <Alpha childKey="Highlight" smoothing="OUT" duration="0.35" order="1" fromAlpha="0" toAlpha="1" />
        <Alpha childKey="Highlight" smoothing="IN" duration="0.35" order="2" fromAlpha="1" toAlpha="0" />
      </AnimationGroup>
    </Animations>
  </Frame>

</Ui>
